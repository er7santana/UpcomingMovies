<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpcomingMoviesApp.Pages.MoviesPage"
             xmlns:extensions="clr-namespace:UpcomingMoviesApp.MarkupExtensions;assembly=UpcomingMoviesApp"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title="{extensions:Translate MoviesPageTitle}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{extensions:Translate MoviesPageTitle}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="{extensions:Translate OK}" Command="{Binding MovieSelectedCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>